<style>
	.cv-container {
		/* General container for the CV content */
	}

	.cv-header {
		text-align: center;
		margin-bottom: 2rem;
	}
	.cv-header h1 {
		display: block; /* Override the hidden h1 from the layout */
		font-size: 2.5rem;
		margin-bottom: 0.25rem;
		letter-spacing: 1px;
	}
	.cv-header p {
		font-size: 1rem;
		color: var(--gray);
		margin: 0;
	}
	.cv-header p a {
		color: var(--black);
		transition: color 0.2s;
	}
	.cv-header p a:hover {
		color: var(--accent);
	}

	/* Section Styling */
	section {
		margin-bottom: 1.5rem;
	}
	h2 {
		font-size: 1.25rem;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		color: var(--black);
		padding-bottom: 0.25rem;
		margin-bottom: 0.75rem;
		border-bottom: 2px solid var(--black);
	}

	/* Entry styling for the two-column look */
	.entry {
		margin-bottom: 0.5rem;
	}
	.entry-header, .entry-subheader {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		gap: 1rem;
	}
	.entry-header .title {
		font-weight: bold;
		font-size: 1.1rem;
	}
	.entry-header .location {
		font-weight: bold;
		font-size: 1rem;
	}
	.entry-subheader .position, .entry-subheader .date {
		font-style: italic;
		color: var(--gray);
	}

	/* List styling for details */
	ul {
		list-style-type: disc;
		padding-left: 1.25rem;
		margin-top: 0;
	}
	ul li {
		margin-bottom: 0.5rem;
	}
	ul.detail-list {
		list-style-type: none;
		padding-left: 0;
	}
	
	/* Responsive adjustments for mobile */
	@media (max-width: 600px) {
		.entry-header, .entry-subheader {
			flex-direction: column;
			align-items: flex-start;
			gap: 0;
		}
		.cv-header p {
			display: flex;
			flex-direction: column;
			gap: 0.25rem;
		}
	}

	.download-links {
		display: flex;
		justify-content: center;
		gap: 1rem;
		margin-top: 1rem;
		flex-wrap: wrap;
	}
	.download-link {
		display: inline-block;
		padding: 0.5rem 1rem;
		border: 1px solid var(--accent);
		color: var(--accent);
		border-radius: 4px;
		text-decoration: none;
		transition: background-color 0.2s, color 0.2s;
	}
	.download-link:hover {
		background-color: var(--accent);
		color: white;
	}
